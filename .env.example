# Model selection
WHISPER_MODEL=base

# GPU processing options
USE_CUDA=false
USE_AMD_GPU=true
MAX_CONCURRENT_PROCESSES=4

# Processing options
WORD_TIMESTAMPS=false
SPLIT_ON_WORD=false
TRANSLATE_TO_ENGLISH=false
REMOVE_WAV_FILE=true

# Subtitle processing
DEDUPLICATE_SUBTITLES=true
MAX_DUPLICATES=1

# Language options
DEFAULT_LANGUAGE=ar
DETECT_LANGUAGE=true

# Language detection method:
# 'manual' - Use manual language map (current behavior)
# 'enhanced' - Manual map + Unicode script detection
# 'auto' - Manual + Unicode + franc package analysis
# 'whisper-only' - Let Whisper auto-detect everything (recommended)
LANGUAGE_DETECTION_METHOD=auto

# Manual language mapping (only used for 'manual', 'enhanced', 'auto' methods)
LANGUAGE_MAP=arabic:ar,Marina:en,الدوالي:ar,النوم:ar,النزيف:ar,الغازات:ar 