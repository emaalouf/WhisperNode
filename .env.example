# Whisper model to use
# Available options: tiny, tiny.en, base, base.en, small, small.en, medium, medium.en, large-v1, large, large-v3-turbo
WHISPER_MODEL=base

# Whether to use CUDA for processing
USE_CUDA=false

# Custom directories (optional)
# VIDEOS_DIR=/path/to/videos
# OUTPUT_DIR=/path/to/output

# Output formats (optional, defaults to SRT and VTT only)
# OUTPUT_JSON=false
# OUTPUT_TEXT=false
# OUTPUT_WORDS=false
# OUTPUT_LRC=false
# OUTPUT_CSV=false

# Processing options (optional)
# WORD_TIMESTAMPS=true
# SPLIT_ON_WORD=true
# TRANSLATE_TO_ENGLISH=false
# REMOVE_WAV_FILE=true 